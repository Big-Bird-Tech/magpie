{
  "name": "magpie",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "fix": "rm -rf node_modules; rm package-lock.json; npm install",
    "prebuild": "rimraf dist",
    "prepublishOnly": "npm run build",
    "precommit": "npm run format && npm run lint",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test,lib,seeds,migrations}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "database:drop": "rm -rf database/db.sqlite",
    "database:migrate": "knex migrate:latest",
    "database:fresh": "npm run database:drop && npm run database:migrate"
  },
  "dependencies": {
    "@bbt/bowerbird": "0.1.0",
    "@types/uuid": "8.3.0",
    "knex": "0.95.4",
    "pg": "8.5.1",
    "rimraf": "3.0.2",
    "sqlite3": "5.0.2",
    "uuid": "8.3.2"
  },
  "devDependencies": {
    "@types/faker": "5.5.0",
    "@types/jest": "26.0.22",
    "@types/node": "14.14.36",
    "@typescript-eslint/eslint-plugin": "4.19.0",
    "@typescript-eslint/parser": "4.19.0",
    "eslint": "7.22.0",
    "eslint-config-prettier": "8.1.0",
    "eslint-plugin-prettier": "3.3.1",
    "faker": "5.5.2",
    "jest": "26.6.3",
    "prettier": "2.2.1",
    "ts-jest": "26.5.4",
    "ts-loader": "8.0.18",
    "ts-node": "9.1.1",
    "tsconfig-paths": "3.9.0",
    "typescript": "4.3.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
